{% extends 'base.djhtml' %}

{% block title %}Signup Page{% endblock %}

{% block middle_column %}
    <!-- TODO Objective 1: implement signup form -->
    <form method="post" id="signup_form" action="{% url 'login:user_signup_view' %}">
      {% csrf_token %}
      {{ signup_form }}
      <input type="submit" value="Submit" />
  </form>
  {% if signup_failed %}
      <p style="color:red"> Invalid username or password </p>
  {% endif %}
{% endblock %}
